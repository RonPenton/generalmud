{
    "name": "generalmud",
    "version": "0.0.1",
    "description": "A MUD for Node and Websockets",
    "main": "./build/server/index.js",
    "scripts": {
        "watch": "nodemon",
        "start": "npm run build && npm run-script go",
        "go": "node ./build/index.js",
        "init-db": "npm run build && node ./build/setup/index.js",
        "build": "npm run-script clean && npm run-script tools && npm run-script build-server && npm run-script build-client && npm run-script copy-data",
        "tools": "npm run-script build-tools && npm run-script run-tools",
        "clean": "rimraf ./build && rimraf ./build-tools",
        "build-server": "tsc --project ./src/server/tsconfig.json",
        "build-client": "webpack --config ./src/client/webpack.config.js",
        "build-tools": "tsc --project ./src/tools/tsconfig.json",
        "run-tools": "",
        "copy-data": "npm run-script copy-foundation && npm run-script copy-css && npm run-script copy-ejs",
        "copy-foundation": "copyfiles -u 4 ./node_modules/foundation-sites/dist/css/foundation.min.css ./build/public",
        "copy-css": "copyfiles -u 2 ./src/client/**/*.css ./build/public",
        "copy-ejs": "copyfiles -u 3 ./src/client/views/**/*.ejs ./build/views",
        "copy-require": "copyfiles -u 2 ./node_modules/requirejs/require.js ./build/public",
        "copy-fast": "npm run-script copy-css && npm run-script copy-ejs",
        "build-fast": "npm run-script build-client && npm run-script copy-fast"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/RonPenton/generalmud.git"
    },
    "keywords": [
        "MUD"
    ],
    "author": "Ron Penton",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/RonPenton/generalmud/issues"
    },
    "homepage": "https://github.com/RonPenton/generalmud#readme",
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/clone": "^2.1.1",
        "@types/connect-flash": "^0.0.37",
        "@types/connect-pg-simple": "^7.0.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/csvtojson": "^2.0.0",
        "@types/decimal.js": "^7.4.0",
        "@types/deep-freeze": "^0.1.2",
        "@types/express": "^4.17.14",
        "@types/express-session": "^1.17.5",
        "@types/morgan": "^1.9.3",
        "@types/passport": "^1.0.11",
        "@types/passport-local": "^1.0.34",
        "@types/react": "^18.0.21",
        "@types/react-dom": "^18.0.6",
        "@types/socket.io": "^3.0.2",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "css-loader": "^6.7.1",
        "mini-css-extract-plugin": "^2.6.1",
        "nodemon": "^2.0.20",
        "rimraf": "^3.0.2",
        "sass": "^1.55.0",
        "sass-loader": "^13.1.0",
        "ts-loader": "^9.4.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths-webpack-plugin": "^4.0.0",
        "typescript": "^4.8.4",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-middleware": "^5.3.3",
        "webpack-hot-middleware": "^2.25.2"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "big-number": "^2.0.0",
        "clone": "^2.1.2",
        "connect-flash": "^0.1.1",
        "connect-pg-simple": "^7.0.0",
        "cookie-parser": "^1.4.6",
        "csvtojson": "^2.0.10",
        "date-fns": "^2.29.3",
        "decimal.js": "^10.4.2",
        "decko": "^1.2.0",
        "deep-freeze": "^0.0.1",
        "dotenv-json2": "^1.1.0",
        "ejs": "^3.1.8",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "foundation-sites": "^6.7.5",
        "morgan": "^1.10.0",
        "passport": "^0.6.0",
        "passport-local": "^1.0.0",
        "pg-promise": "^10.12.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "socket.io": "^4.5.2",
        "socket.io-client": "^4.5.3",
        "ts-dotenv-parser": "^1.1.0",
        "ts-priority-queue": "^0.1.1",
        "tsc-utils": "^2.3.0"
    }
}
